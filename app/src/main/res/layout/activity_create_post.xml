                <Button
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:text="Click to Select category"
                    android:layout_gravity="center"
                    android:id="@+id/select_category"
                    android:background="@drawable/gradiant"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:clickable="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:contextClickable="true"
                        android:background="@drawable/loadingshape"
                        android:id="@+id/upload_image_view"
                        android:visibility="gone"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Choose Image from Gallery"
                        android:id="@+id/choose_image_from_gallery"
                        android:background="@drawable/btn_bg"
                        android:textColor="#000"
                        android:drawableEnd="@drawable/gallery"
                        android:padding="10dp"


                        />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author info:"
                android:layout_marginTop="10dp"
                android:textColor="#00a4a5"
                android:textSize="25sp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:padding="20dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:hint="Full Name"
                    android:id="@+id/full_name_form"
                    android:textSize="20sp"


                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lines="1"
                    android:hint="Email"
                    android:id="@+id/email_form"
                    android:textSize="20sp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Submit"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/submit_form_button"
                    android:layout_margin="20dp"
                    android:background="@drawable/gradiant"
                    android:textColor="#fff"
                    />
            </LinearLayout>


        </LinearLayout>


