<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activites.CreatePost"
    android:background="#EEE"
    android:scrollbars="vertical"
    android:id="@+id/scrool_parent">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Post/Blog"
                android:layout_marginTop="10dp"
                android:textColor="#00a4a5"
                android:textSize="25sp"
                android:layout_gravity="center"

                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:id="@+id/post_title_form"
                    android:hint="Post Title"
                    android:textSize="20sp"


                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lines="1"
                    android:hint="Short desciption"
                    android:id="@+id/short_description_form"
                    android:textSize="20sp"
                    />

                <EditText
                    android:id="@+id/post_content_form"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_bg"
                    android:hint="Post Contant"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textAlignment="gravity"
                    android:singleLine="false"
                    android:textSize="20sp"
                    />


